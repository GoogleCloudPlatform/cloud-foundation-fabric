{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "SCC Mute Configurations",
  "type": "object",
  "patternProperties": {
    "^[a-z0-9-]+$": {
      "type": "object",
      "required": [
        "filter"
      ],
      "properties": {
        "description": {
          "type": "string"
        },
        "filter": {
          "type": "string"
        },
        "type": {
          "type": "string",
          "enum": [
            "DYNAMIC",
            "STATIC"
          ],
          "default": "DYNAMIC"
        }
      }
    }
  }
}
