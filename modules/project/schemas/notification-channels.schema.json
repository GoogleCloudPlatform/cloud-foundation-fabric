{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Notification Channels",
  "type": "object",
  "additionalProperties": false,
  "patternProperties": {
    "^[a-zA-Z0-9-]+$": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "type": {
          "type": "string"
        },
        "description": {
          "type": "string"
        },
        "display_name": {
          "type": "string"
        },
        "enabled": {
          "type": "boolean"
        },
        "labels": {
          "type": "object",
          "additionalProperties": {
            "type": "string"
          }
        },
        "user_labels": {
          "type": "object",
          "additionalProperties": {
            "type": "string"
          }
        },
        "sensitive_labels": {
          "type": "object",
          "additionalProperties": false,
          "properties": {
            "auth_token": {
              "type": "string"
            },
            "password": {
              "type": "string"
            },
            "service_key": {
              "type": "string"
            }
          }
        }
      },
      "required": [
        "type"
      ]
    }
  }
}
