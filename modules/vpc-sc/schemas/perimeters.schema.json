          "$ref": "#/$defs/VpcAccessibleServices"
        }
      },
      "additionalProperties": false
    },
    "use_explicit_dry_run_spec": {
      "type": "boolean",
      "default": false
    }
  },
  "$defs": {
    "VpcAccessibleServices": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "allowed_services": {
          "type": "array",
          "items": {
            "type": "string"
          }
        },
        "enable_restriction": {
          "type": "boolean"
        }
      },
      "required": [
        "allowed_services"
      ]
    }
  }
