{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Organization Policy Custom Constraints",
  "type": "object",
  "additionalProperties": false,
  "patternProperties": {
    "^custom\\.[a-zA-Z0-9_-]+$": {
      "type": "object",
      "additionalProperties": false,
      "required": [
        "action_type",
        "condition"
      ],
      "properties": {
        "display_name": {
          "type": "string"
        },
        "description": {
          "type": "string"
        },
        "action_type": {
          "type": "string"
        },
        "condition": {
          "type": "string"
        },
        "method_types": {
          "type": "array",
          "items": {
            "type": "string"
          }
        },
        "resource_types": {
          "type": "array",
          "items": {
            "type": "string"
          }
        }
      }
    }
  }
}