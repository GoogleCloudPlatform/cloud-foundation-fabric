---

yaml-files:
- '*.yaml'
- '*.yml'
- '.yamllint'

## exclude
ignore: |
  fast/stages/0-org-setup/assets/workflow-*.yaml
  cloud-config.yaml
  *-cloud-config.yaml

extends: default

rules:
  indentation:
    indent-sequences: consistent
  line-length:
    max: 120
    level: warning
  braces: disable
  document-start: disable
  empty-lines:
    max: 2
    max-start: 0
    max-end: 1
  comments-indentation: disable
